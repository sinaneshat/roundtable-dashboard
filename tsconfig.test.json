{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "rootDirs": ["src", "."],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": [
      "vitest/globals",
      "vitest/jsdom",
      "@testing-library/jest-dom",
      "node"
    ],
    "allowImportingTsExtensions": true,
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "isolatedModules": true
  },
  "include": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/**/__tests__/**/*.ts",
    "src/**/__tests__/**/*.tsx",
    "vitest.setup.ts",
    "vitest.config.ts",
    "__mocks__/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".next",
    "out"
  ]
}
