{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./packages/typescript-config/base.json",
  "compilerOptions": {
    "incremental": true,
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "noUnusedParameters": false
  },
  "references": [
    { "path": "apps/api" },
    { "path": "apps/web" },
    { "path": "packages/shared" }
  ],
  "include": [
    "scripts/**/*.ts",
    "e2e/**/*.ts",
    "*.ts",
    "*.mjs",
    "cloudflare-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "apps",
    "packages",
    "dist",
    "out",
    ".wrangler",
    ".claude",
    ".agents"
  ]
}
