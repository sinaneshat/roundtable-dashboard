{
  "name": "@roundtable/api",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    }
  },
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "scripts": {
    "dev": "wrangler dev --local",
    "prebuild": "[ -z \"$CI\" ] && pnpm cf-typegen; tsc --emitDeclarationOnly",
    "build": "wrangler deploy --dry-run --outdir=dist",
    "deploy": "wrangler deploy --define __APP_VERSION__:\\\"$(node -p \"require('../../package.json').version\")\\\"",
    "deploy:preview": "wrangler deploy --env=preview --keep-vars --define __APP_VERSION__:\\\"$(node -p \"require('../../package.json').version\")\\\"",
    "deploy:production": "wrangler deploy --env=production --keep-vars --define __APP_VERSION__:\\\"$(node -p \"require('../../package.json').version\")\\\"",
    "check-types": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv cloudflare-env.d.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate:local": "wrangler d1 migrations apply DB --local",
    "db:migrate:preview": "wrangler d1 migrations apply DB --remote --env=preview",
    "db:migrate:prod": "wrangler d1 migrations apply DB --remote --env=production",
    "db:studio:local": "drizzle-kit studio",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@cf-wasm/resvg": "^0.3.3",
    "@hono/zod-openapi": "^1.2.0",
    "@openrouter/ai-sdk-provider": "^2.0.0",
    "@react-email/components": "^0.0.33",
    "@roundtable/shared": "workspace:*",
    "ai": "^6.0.7",
    "aws4fetch": "^1.0.20",
    "better-auth": "^1.4.10",
    "drizzle-orm": "^0.45.1",
    "drizzle-zod": "^0.8.3",
    "hono": "^4.11.3",
    "jose": "^6.1.3",
    "react": "19.2.3",
    "satori": "^0.19.1",
    "stoker": "^2.0.1",
    "stripe": "^20.1.0",
    "ulid": "^3.0.2",
    "workers-og": "^0.0.27",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260103.0",
    "@roundtable/typescript-config": "workspace:*",
    "@roundtable/vitest-config": "workspace:*",
    "drizzle-kit": "^0.31.8",
    "typescript": "5.9.3",
    "vitest": "^4.0.16",
    "wrangler": "^4.59.3"
  }
}
