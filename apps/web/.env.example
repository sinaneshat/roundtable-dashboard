# Web App Environment Variables Template
# Copy this file to .env and replace with your actual values
#
# TanStack Start uses Vite conventions:
# - VITE_* prefix: Exposed to client-side code via import.meta.env.VITE_*
# - No prefix: Server-side only via process.env.*
#
# For deployed environments, vars are set in wrangler.jsonc

# ============================================================================
# CLIENT-SIDE VARS (VITE_* prefix - exposed in browser)
# ============================================================================

# Environment (local | preview | prod)
# Used by base-urls.ts to determine backend URL for server-side requests
VITE_WEBAPP_ENV=local

# Application Info
VITE_APP_NAME=Roundtable
VITE_APP_VERSION=1.0.0
VITE_APP_URL=http://localhost:5173

# Maintenance Mode
VITE_MAINTENANCE=false

# Turnstile Site Key (CAPTCHA - public)
VITE_TURNSTILE_SITE_KEY=0x4AAAAAAAnF8lAkO8_hM6w4

# Stripe Publishable Key (public)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_test_publishable_key_here

# PostHog Analytics (client-side)
VITE_POSTHOG_API_KEY=phc_your_posthog_project_api_key
VITE_POSTHOG_HOST=https://us.i.posthog.com

# ============================================================================
# SERVER-SIDE VARS (no prefix - SSR only)
# ============================================================================

# Better Auth Configuration
# IMPORTANT: BETTER_AUTH_URL should point to the API server (where Better Auth is mounted)
# NOT the web app, since auth is handled by the API
BETTER_AUTH_SECRET=your-better-auth-secret-32-chars-minimum
BETTER_AUTH_URL=http://localhost:8787

# Google OAuth Credentials
AUTH_GOOGLE_ID=your-google-client-id.apps.googleusercontent.com
AUTH_GOOGLE_SECRET=your-google-client-secret

# AWS SES Email Service
AWS_SES_ACCESS_KEY_ID=your-aws-ses-access-key-id
AWS_SES_SECRET_ACCESS_KEY=your-aws-ses-secret-access-key
AWS_SES_REGION=us-east-1
FROM_EMAIL=noreply@roundtable.now
SES_REPLY_TO_EMAIL=support@roundtable.now

# PostHog Server-Side (for SSR exception tracking)
POSTHOG_API_KEY=phc_your_posthog_project_api_key
POSTHOG_HOST=https://us.i.posthog.com

# Environment (fallback for SSR if VITE_WEBAPP_ENV not available)
WEBAPP_ENV=local
