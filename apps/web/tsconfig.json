{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2022",
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["./src/*"],
      "@roundtable/shared": ["../../packages/shared/src"],
      "@roundtable/shared/*": ["../../packages/shared/src/*"]
    },
    "resolveJsonModule": true,
    "strict": false,
    "noImplicitAny": false,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "src/types/**/*.d.ts", "*.d.ts", "vite.config.ts"],
  "exclude": [
    "node_modules",
    ".output",
    "**/__tests__/**",
    "**/*.test.ts",
    "**/*.test.tsx",
    "../api/**/*"
  ]
}
