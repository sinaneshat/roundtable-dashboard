use-node-version=22.14.0
use-pnpm-version=10.27.0

; # Network timeouts for large binary downloads (workerd ~50MB, sharp native modules)
; # Prevents build hangs in Cloudflare Workers Builds
; network-timeout=600000
; fetch-retry-maxtimeout=300000
; fetch-retry-mintimeout=30000
; fetch-retries=5

; # Prevent concurrent postinstall script issues
; child-concurrency=1