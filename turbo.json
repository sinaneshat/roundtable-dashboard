{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["packages/shared/src/**"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "*.config.*", "*.json", "*.d.ts", "wrangler.jsonc"],
      "outputs": [".output/**", "dist/**"]
    },
    "cf-typegen": {
      "inputs": ["wrangler.jsonc"],
      "outputs": ["cloudflare-env.d.ts", "worker-configuration.d.ts"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "deploy": {
      "dependsOn": ["build"]
    },
    "deploy:preview": {
      "dependsOn": ["build"],
      "inputs": ["src/**", "wrangler.jsonc"]
    },
    "deploy:production": {
      "dependsOn": ["build"],
      "inputs": ["src/**", "wrangler.jsonc"]
    },
    "check-types": {
      "inputs": ["src/**", "*.config.*", "*.json", "*.d.ts"]
    },
    "lint": {
      "inputs": ["src/**", "*.config.*"]
    },
    "lint:fix": {
      "inputs": ["src/**", "*.config.*"]
    },
    "test": {
      "inputs": ["src/**", "*.config.*"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "db:generate": {},
    "db:migrate:local": {},
    "db:migrate:preview": {},
    "db:migrate:prod": {}
  }
}
