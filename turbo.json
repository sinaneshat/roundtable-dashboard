{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".output/**", "dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "deploy": {
      "dependsOn": ["build"]
    },
    "deploy:preview": {
      "dependsOn": ["build"]
    },
    "deploy:production": {
      "dependsOn": ["build"]
    },
    "check-types": {
      "dependsOn": ["^build"]
    },
    "lint": {},
    "lint:fix": {},
    "test": {},
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "db:generate": {},
    "db:migrate:local": {},
    "db:migrate:preview": {},
    "db:migrate:prod": {}
  }
}
